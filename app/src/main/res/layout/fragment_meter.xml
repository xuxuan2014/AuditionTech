<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeterFragment">

    <TextView
        android:id="@+id/meterTITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="45dp"
        android:text="Decibel Meter"
        android:textSize="30sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRecord"
        android:layout_width="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="10dp"
        android:text="Start"
        app:icon="@drawable/ic_recording"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/meterDB"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="109dp"
        android:text="0"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/meterREMINDER"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="184dp"
        android:text='Click "Start" to measure your real-time sound exposure.'
        android:textColor="#0E0D0D"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/meterEducate"
        android:layout_width="338dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="110dp"
        android:text="The resultant hearing loss could be permanent but preventable"
        android:textColor="#180C41"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="121dp"
        android:text="dB" />

</RelativeLayout>